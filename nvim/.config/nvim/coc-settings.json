{
  "languageserver": {
    "ocaml": {
      "command": "ocamllsp",
      "rootPatterns": ["dune-project", "*.opam"],
      "trace.server": "verbose",
      "filetypes": ["ocaml"]
    }
  },
  "diagnostic.checkCurrentLine": false,
  "diagnostic.enableMessage": "jump",
  "hover.target": "float",
  "hover.floatConfig": {
    "maxHeight": 10
  }
}
